{
  "name": "sound-circle",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/server.js",
  "scripts": {
    "test": "jest --verbose",
    "test:watch": "jest --listTests",
    "test:list": "jest --listTests",
    "test:specific": "jest path/to/your/tests",
    "test:clearCache": "jest --clearCache",
    "dev": "concurrently \"tsc --watch\" \"nodemon -q dist/src/server.js\"",
    "build": "rimraf dist && npx tsoa spec-and-routes && npm run tsc",
    "start": "node dist/src/server.js",
    "tsoa:spec": "npx tsoa spec",
    "tsc": "tsc --noEmit --emitDeclarationOnly false --experimentalDecorators",
    "tsoa:routes": "npx tsoa routes"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "concurrently": "^9.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "express-session": "^1.18.1",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "node": "^22.9.0",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.13.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/hapi__podium": "^4.1.3",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "joi": "^17.13.3",
    "nodemon": "^3.0.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsoa": "^6.4.0",
    "typescript": "^5.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "maxWorkers": 2,
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.[jt]s?(x)"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!your-module-to-transform|other-modules-to-transform)"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  }
}
